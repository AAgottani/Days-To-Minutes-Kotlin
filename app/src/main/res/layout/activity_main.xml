<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#F1FAEE"
    android:padding="16dp"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CALCULATE YOUR"
        android:textStyle="bold"
        android:textColor="#1D3557"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AGE"
        android:padding="10dp"
        android:background="#e63946"
        android:textColor="#F1FAEE"
        android:textSize="24sp" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="IN MINUTES"
      android:textStyle="bold"
      android:textColor="#1D3557"
      android:textSize="24sp"
      android:layout_marginTop="16dp"
      />
    <Button
        android:id="@+id/date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select date"
        android:textColor="@color/white"
        android:layout_margin="16dp"
       android:backgroundTint="#457B9D"
        />

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23/09/2022"
        android:textStyle="bold"
        android:textColor="#1D3557"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date"
        android:textStyle="bold"
        android:textColor="#1D3557"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/result_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000000"
        android:textStyle="bold"
        android:textColor="#1D3557"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:textStyle="bold"
        android:textColor="#1D3557"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        />

</LinearLayout>